<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ausias.ingotohelper.PerfilActivity">

    <ImageView
        android:background="#698BD1"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imagePerfil"
        android:layout_height="240dp" />

    <TextView
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_marginTop="190dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nomCognom" />

    <ImageView
        android:src="@drawable/telephone"
        android:layout_width="wrap_content"
        android:id="@+id/iconTelef"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="270dp"/>

    <TextView
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="268dp"
        android:gravity="left"
        android:layout_marginLeft="85dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/telefPerfil" />

    <ImageView
        android:src="@drawable/email"
        android:layout_width="wrap_content"
        android:id="@+id/iconEmail"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="330dp"/>

    <TextView
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="332dp"
        android:gravity="left"
        android:layout_marginLeft="85dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailPerfil" />

    <ImageView
        android:src="@drawable/marker"
        android:layout_width="wrap_content"
        android:id="@+id/iconMarker"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="390dp"/>

    <TextView
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginTop="394dp"
        android:gravity="left"
        android:layout_marginLeft="85dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/markerPerfil" />

</RelativeLayout>
